#!/bin/sh

##########################################
# edb platform env setup.
##########################################

#1.Set EN_P5V and usb hub.
/usr/local/bin/gpio --out 5 0
/usr/local/bin/gpio --out 8 0
/usr/local/bin/gpio --out 9 0
sleep 0.1
/usr/local/bin/gpio --out 5 1
sleep 0.05
/usr/local/bin/gpio --out 8 1
/usr/local/bin/gpio --out 9 1

#2.user led default output 0.
/usr/local/bin/gpio --out 52 0
/usr/local/bin/gpio --out 53 0
/usr/local/bin/gpio --out 56 0
/usr/local/bin/gpio --out 57 0

#3.mdev
echo /sbin/mdev > /proc/sys/kernel/hotplug
/sbin/mdev -s

